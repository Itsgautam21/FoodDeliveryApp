<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.MakeSelection"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-1dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAKE\nSELECTION"
            android:layout_gravity="left"
            android:textSize="40sp"
            android:textColor="#000"
            android:fontFamily="@font/muli_black"
            android:textAlignment="inherit"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select which contact detail should we use to reset your password"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:fontFamily="@font/autour_one"
            android:textAlignment="inherit"
            android:gravity="left"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_phone_android_24"
                app:tint="#000" />

            <TextView
                android:id="@+id/via_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="52dp"
                android:layout_toRightOf="@id/phone_icon"
                android:fontFamily="@font/autour_one"
                android:text="Via SMS"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_toRightOf="@id/phone_icon"
                android:layout_below="@id/via_sms"
                android:fontFamily="@font/autour_one"
                android:text="+918877107677"
                android:textSize="20sp"
                android:textColor="#000"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#00000000"
                android:background="#00000000"
                android:onClick="getCode_page"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_email_24"
                app:tint="#000"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/via_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="52dp"
                android:layout_toRightOf="@id/email_icon"
                android:fontFamily="@font/autour_one"
                android:text="Via Email"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/via_email"
                android:layout_marginLeft="28dp"
                android:layout_toRightOf="@id/email_icon"
                android:fontFamily="@font/allerta"
                android:text="krgautam1777@gmail.com"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:backgroundTint="#00000000"
                android:onClick="getCode_page"/>

        </RelativeLayout>

    </LinearLayout>


</ScrollView>